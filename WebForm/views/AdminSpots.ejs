<body>
    <div class="container container-small">
        <table class = "table table-sm">
            <thead>
                <tr>
                    <th scope = "col"><h3>Spot</h3></th>
                    <th scope = "col"><h3>Occupied</h3></th>
                    <th scope = "col"><h3>Reserved</h3></th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < spot.length; i++){ %>
                     <tr> 
                        <td><%- spot[i] %></td>
                        <td><%- occ[i] %></td>
                        <td><%- reserved[i] %></td>
                     </tr>
                <% } %>
            </tbody>
        </table>
        <form action = /admin/spots/updated method = "POST"> 
                <div class="row">
                  <div class="col">
                    <input name = "spot" type="number" class="form-control" placeholder="Spot">
                  </div>
                  <div class="col">
                    <input name = "occ" type="number" class="form-control" placeholder="Occupied">
                  </div>
                  <div class="col">
                    <input name = "reserve" type="number" class="form-control" placeholder="Reserved">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
        </form>
    </div>
</body>
